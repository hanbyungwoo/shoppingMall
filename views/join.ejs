
<!DOCTYPE html>


<html>
  <head>
  
<%include ./1.ejs %>

  <title><%= title %></title>
    <meta charset='utf-8'>
    <script>
    $(function(){
        $("#btnJoin").click(
        

            function(){
                var department =$(":input:radio[name=sellerorbuyer]:checked").val();     
                if(department == "")
                {
                    alert("seller or buyer 를 선택하세요 ");
                    $("#sellerorbuyer").focus();
                    return ;
                }
                if($("#id").val() == "")
                {
                    alert("아이디를 꼭 입력하세요");
                    $("#id").focus();
                    return ;
                }
                // if($("#nickname").val() == "")
                // {
                //  alert("닉네임을 꼭 입력하세요");
                //  $("#nickname").focus();
                //  return ;
                // }
                if($("#passwd").val() == "" )
                {
                    alert("비밀번호를 꼭 입력 하세요");
                    $("#passwd").focus();
                    return ;
                }
                if($("#passwd2").val() == "" )
                {
                    alert("비밀번호확인을 꼭 입력 하세요");
                    $("#passwd2").focus();
                    return ;
                }
                if($("#name").val == "" )
                {
                    alert("이름을 꼭 입력 하세요");
                    $("#name").focus();
                    return ;
                }
                if($("#email1").val() == "")
                {
                    alert("이메일을 꼭 입력 하세요");
                    $("#email1").focus();
                    return ;
                }
                if($("#email2").val() == "")
                {
                    alert("이메일을 꼭 입력 하세요");
                    $("#email2").focus();
                    return ;
                }
                var email = $("#email").val() + '@' + $("#email2").val();
                $("#email").val(email);
                if($("#tel2").val() == "")
                {
                    alert("전화번호 두번째 자리를 확인해 주세요");
                    $("#tel2").focus();
                    return ;
                }
                if($("#tel3").val() == "")
                {
                    alert("전화번호 세번째 자리를 확인해 주세요");
                    $("#tel3").focus();
                    return ;
                }
                var tel = $("#tel1").val() + '-' + $("#tel2").val() + '-' + $("#tel3").val();
                $("#tel").val(tel);
                if($("#address").val() == "")
                {
                    alert("주소를 꼭 입력해 주세요");
                    $("#address").focus();
                    return ;
                }
                if($("#passwd").val() != $("#passwd2").val()) {
                    alert("비밀번호가 일치하지 않습니다.");
                    return ;
                }
                $("#join").submit();
            }
            );

    });

    $(function(){
        $("#id_check").click(
            function(){
                
                if($("#id").val() == "")
                {
                    alert("아이디를 꼭 입력하세요");
                    $("#id").focus();
                    return ;
                }
                
                
                window.open("/join/check", "_blank", "width=300, height=300;");
                $("#join").submit();
                // window.submit();

                // window.getElementById("id").innerHTML = $("#id");

            }
            );
        
    });

   
    </script>
  </head>
  <body>
    
