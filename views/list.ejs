<!DOCTYPE html>
<html>
<%include ./1.ejs %>
    
    
    <script type="text/javascript">
        function btnWrite() {
            var form = document.forms['test_form'];
            form.action = '/Q&A/write';
            form.submit();
            return;
        }

    </script>

<head>
 <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body>



<div class="container">
  <table class="table table-hover">
    <thead>


<form name="test_form">

<h1><%= title %></h1>

    <tr>
        <td>번호</td>
        <td>제목</td>
        <td>작성자</td>
        <td>등록일</td>
    </tr>
    <%
        for(var i=0; i<rows.length; i++) {
            var oneItem = rows[i];
    %>
        <tr>
            <td><%=oneItem.contentnum%></td>
            <td><a href="/Q&A/q_acontent/<%=oneItem.contentnum%>"><%=oneItem.title%></a></td>
            <td><%=oneItem.memberid%></a></td>
            <td><%=oneItem.q_adate%></td>
        </tr>
             <%
            var check = 1;
            for(var j=0;j<row.length;j++) {
                var twoItem = row[j];
                if(twoItem.contentnum == oneItem.contentnum) {
                    check = 0;
                    break;
                }
            }
        %>
        <% if(check == 0) { %>
            <tr>
                <td>☞</td>
                <td>RE : <%=oneItem.title%></td>
                <td>관리자</td>
                <td><%=twoItem.q_adate%></td>
            </tr>
        <% } %>
            
    <%
        }
    %>

     </tbody>

      </table>
<button type="submit" class="btn btn-default" onclick=btnWrite();>글쓰기</button>
</div>

<br>


</form>

</body>
</html>